<div class="row top-buffer">
  <div class="tabbable">
    <ul class="nav nav-pills nav-stacked span2">
      <% brackets.each.with_index do |(bracket, _), index| %>
        <li <%= "class=active" if index==0 %>><a href="#<%= index %>" data-toggle="tab"><%= bracket.name %></a></li>
      <% end %>
    </ul>

    <div class="tab-content">
      <% brackets.each.with_index do |(bracket, team_participations), index| %>
        <div class="tab-pane <%= 'active' if index==0%>" id='<%= index %>'>
          <div class="span5 instructions">
            <h3><%= t("competition.leaderboard.teams") %></h3>
            <%= render "teams/ranking", team_participations: team_participations %>
          </div>
          <%# <div class="span5 instructions"> %>
          <%#   <h3><%= t("competition.leaderboard.riders") %1></h3> %>
          <%#   <%= render "memberships/ranking", :memberships=>bracket.memberships_by_participation %1> %>
          <%# </div> %>
        </div>
      <% end %>
    </div>
  </div>
</div>
